@model Roll.Models.asoc_personaje_item_filtro_create

@{
    Layout = "/Views/personajes/_LayoutPage1.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
    <div class="form-horizontal">
        <h4>asoc_personaje_item</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.id_personaje, "id_personaje", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("id_personaje", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_personaje, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.categoria, "categoria", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("categoria", null, htmlAttributes: new { @class = "form-control select_categoria" })
                @Html.ValidationMessageFor(model => model.categoria, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.clasificacion, "clasificacion", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("clasificacion", null, htmlAttributes: new { @class = "form-control " })
                @Html.ValidationMessageFor(model => model.clasificacion, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.tipo, "tipo", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("tipo", null, htmlAttributes: new { @class = "form-control " })
                @Html.ValidationMessageFor(model => model.tipo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <table class="table" id="tabla_items_resumido">
                <thead>
                    <tr>
                        <th>
                            Seleccionar
                        </th>
                        <th>
                            item_nombre
                        </th>
                        <th>
                            item_categoria
                        </th>
                        <th>
                            item_clasificacion	
                        </th>
                        <th>
                            item_tipo
                        </th>
                        <th>
                            item_descripcion
                        </th>
                        <th>
                            item_bonificacion
                        </th>
                        <th>
                            cantidad
                        </th>
                        <th>
                            equipado
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.lista)
                    {
                        if (@item.item_tipo == null)
                        {
                            <tr item_categoria="@item.item_categoria" item_clasificacion="@item.item_clasificacion" item_tipo="vacio" class="filtrado">
                                <td>
                                    <button id="" class="btn_item_select" id_item="@item.id_item">Usar</button>
                                </td>
                                <td>@item.item_nombre</td>
                                <td>@item.item_categoria</td>
                                <td>@item.item_clasificacion</td>
                                <td>@item.item_tipo</td>
                                <td>@item.item_descripcion</td>
                                <td>@item.item_bonificacion</td>

                                <td><input type="number" class="cantidad_listado" id="cantidad_item_@item.id_item" value="0" /></td>
                                <td><input type="checkbox" class="equipado_check" id="equipado_item_@item.id_item" /></td>
                            </tr>
                        }
                        else
                        {
                            <tr item_categoria="@item.item_categoria" item_clasificacion="@item.item_clasificacion" item_tipo="@item.item_tipo" class="filtrado">
                                <td>
                                    <button id="" class="btn_item_select" id_item="@item.id_item">Usar</button>
                                </td>
                                <td>@item.item_nombre</td>
                                <td>@item.item_categoria</td>
                                <td>@item.item_clasificacion</td>
                                <td>@item.item_tipo</td>
                                <td>@item.item_descripcion</td>
                                <td>@item.item_bonificacion</td>

                                <td><input type="number" class="cantidad_listado" id="cantidad_item_@item.id_item" value="0" /></td>
                                <td><input type="checkbox" class="equipado_check" id="equipado_item_@item.id_item" /></td>
                            </tr>
                        }

                    }
                </tbody>
            </table>
        </div>


    </div>
    }
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
