                            <th>peso</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.lista_botas)
                        {
                            <tr>
                                <td>
                                    <img class="largas_img" src="~/Imagenes/@item.categoria/@item.clasificacion/@item.nombre_imagen" alt="@item.nombre" />
                                </td>
                                <td>@item.clasificacion</td>
                                <td>@item.tipo</td>
                                <td>@item.descripcion</td>
                                <td>@item.bono</td>
                                <td>@item.cantidad</td>
                                <td equipado="0">
                                    @if (@item.equipado.ToString() == "True")
                                    {
                                        <label class="switch">
                                            <input class="equipado_check" id_asoc="@item.id_asoc" type="checkbox" checked>
                                            <span class="slider"></span>
                                        </label>
                                    }
                                    else
                                    {
                                        <label class="switch">
                                            <input class="equipado_check" id_asoc="@item.id_asoc" type="checkbox">
                                            <span class="slider"></span>
                                        </label>
                                    }
                                </td>
                                <td>@item.item_atk</td>
                                <td>@item.item_mag_atk</td>
                                <td>@item.item_def</td>
                                <td>@item.item_mag_def</td>
                                <td>@item.peso</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!--<div class="modal-footer">
                <h3>Modal Footer</h3>
            </div>-->
        </div>

    </div>

    <!-- The Modal -->
    <div id="mascotas_modal" class="modal">

        <!-- Modal content -->
        <div class="modal-content">
            <div class="modal-header">
                <span class="close">&times;</span>
                <h2>Mascotas y Familiares</h2>
            </div>

            <div class="modal-body">
                @foreach (var item in Model.lista_pets)
                {
                    
                    <div class="row fila_x_mascota">
                        <div class="row">
                            <input type="hidden" id="mascota_id" value="@item.mascota_id" />
                            <div class="col-md-2">
                                @item.mascota_nombre
                            </div>
                            <div class="col-md-2">
                                Lvl. @item.mascota_nivel
                            </div>
                            <div class="col-md-8"></div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <img class="casco_img" src="~/Imagenes/monstruos/@item.nombre_imagen" alt="" />
                            </div>
                            <div class="col-md-10">
                                <div class="row">
                                    <div class="progress col-md-2 div_barra div_barra_vida">
                                        <input type="hidden" id="vida_max_mascota_@item.mascota_id" value="@item.mascota_vida_real" />
                                        <input type="hidden" id="vida_actual_mascota_@item.mascota_id" value="@item.mascota_vida_actual" />
                                        <div class="progress-bar barra_vida" role="progressbar" id="barra_actual_vida_mascot" style="width: 50%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                                        <span>@item.mascota_vida_actual/@item.mascota_vida_real</span>
                                    </div>
                                    <div class="col-md-10"></div>
                                </div>
                                <div class="row">
                                    <div class="progress col-md-2 div_barra div_barra_energia ">
                                        <div class="progress-bar barra_energia " role="progressbar" id="barra_actual_energia_mascot" style="width: 35%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                                        <span>@item.mascota_mana_actual/@item.mascota_mana_real</span>
                                    </div>
                                    <div class="col-md-10"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                }


            </div>
            <!--<div class="modal-footer">
                <h3>Modal Footer</h3>
            </div>-->
        </div>

    </div>

    <hr />
    <div class="popup">
        <a href="#" class="close">X</a>
        <iframe id="mascota_detalle" class="iframe_personalizado" src="">
        </iframe>

    </div>
    


